{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "plugins": ["./lint/no-import-extensions.grit"],
  "files": {
    "includes": ["**", "!**/dist", "!**/worktrees", "!**/*.grit"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  }
}
